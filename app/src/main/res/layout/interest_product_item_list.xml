<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/orderListItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <TextView android:id="@+id/interestProductListItemNumber"
        android:layout_width="0dp"
        android:layout_margin="4dip"
        android:layout_weight="0.15"
        android:layout_height="wrap_content"
        android:paddingTop="12dip"
        android:paddingBottom="12dip" />
    <TextView android:id="@+id/interestProductListItemCode"
        android:layout_width="0dp"
        android:layout_margin="4dip"
        android:layout_weight="0.15"
        android:layout_height="wrap_content"
        android:paddingTop="12dip"
        android:paddingBottom="12dip"
        android:gravity="center" />

    <TextView android:id="@+id/interestProductListItemPrice"
        android:layout_width="0dp"
        android:layout_margin="4dip"
        android:layout_weight="0.30"
        android:layout_height="wrap_content"
        android:paddingTop="12dip"
        android:paddingBottom="12dip"
        android:gravity="center" />
    <Button android:id="@+id/interestProductListEdit"
        android:layout_width="0dp"
        android:layout_margin="4dip"
        android:layout_weight="0.15"
        android:layout_height="wrap_content"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
        android:gravity="center"
        android:background="@drawable/ic_mode_edit_black_12dp" />
</LinearLayout>